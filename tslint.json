{
    "extends": "tslint:recommended",
    "rulesDirectory": [],
    "rules": {
        "no-empty": [false],
        "object-literal-sort-keys": [false],
        "ordered-imports": [false],
        "max-line-length": [true, {"limit": 300, "ignore-pattern": "^import |//"}],
        "member-ordering": [false],
        "arrow-parens": [false],
        "interface-name": [true],
        "curly": [true],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "always",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "quotemark": [true, "single"],
        "no-trailing-whitespace": [true],
    }
}